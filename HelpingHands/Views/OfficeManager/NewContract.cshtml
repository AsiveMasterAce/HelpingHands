@model IEnumerable<HelpingHands.Models.CareContract>
@{
    ViewData["Title"] = "New Contracts";
}




<div class="d-flex mb-2 mx-3">

    <h6 style="margin-left:22px; font-weight:600;">New Contracts</h6>

</div>

<div class="p-3 mx-3">
    @if (Model.Count() != 0)
    {


        <table class="table table-striped table-sm small-text" id="careContractTable">
            <thead class="thead-dark mt-3">
                <tr>
                    <th>
                        Contract Date
                    </th>
                    <th>
                        Care Status
                    </th>
                    <th>
                        Wound Condition
                    </th>
                    <th>
                        Patient
                    </th>
                    <th>
                        Nurse Assigned
                    </th>
                    <th>
                        Start Date
                    </th>
                    <th>
                        End Date
                    </th>
                    <th>
                        Location
                    </th>

                    <th class="no-sort">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @item.ContractDate.Value.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @item.CareStatus
                        </td>
                        <td>
                            @item.WoundDescription
                        </td>
                        <td>
                            @item.Patient?.FirstName @item.Patient?.LastName
                        </td>
                        <td>
                            @item.Nurse?.FirstName @item.Nurse?.LastName
                        </td>
                        <td>
                            @if (item.StartDate == null)
                            { }
                            else
                            {
                                @item.StartDate.Value.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td>
                            @if (item.EndDate == null)
                            { }
                            else
                            {
                                @item.EndDate.Value.ToString("dd/MM/yyyy")
                            }
                        </td>
                        <td>
                            @item.AddressLine1 @item.AddressLine2 @item.Suburb.Name @item.Suburb.City.Name
                        </td>

                        <td>
                            <a class="btn btn-secondary rounded-3 small-btn" asp-controller="OfficeManager" asp-action="AssignContract" asp-route-Id="@item.ContractID" title="Assign Contract">
                                <i class="bi bi-arrow-up-right-circle"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        

    }
</div>


<script>

    $(document).ready(function () {
        $("#careContractTable").DataTable({
            "scrollY": "430px",
            "scrollCollapse": true,
            "columnDefs": [
                { "orderable": false, "targets": 'no-sort' }
            ],
            "order": [[0, "desc"]],
            "max-width": "100%"
        });




    });
</script>