@model IEnumerable<HelpingHands.Models.CareContract>
@{
    ViewData["Title"] = "CareContract";
}

<div class="d-flex mb-3 mx-3">

    <h4>All Active Users</h4>

    <div class="ms-auto">

        <a asp-action="AddUser" asp-controller="Admin" class="btn btn-success">New User</a>
    </div>

</div>

<div class="p-3 mx-3">
    <h5><i class="bi bi-filter-left"></i>Filters</h5>
    <div class="filter-bg mb-3 rounded-2 p-3">
        <form method="get" class="form-inline">
            <div class="form-group">
                <label for="userType">Choose User Type:</label>
                <select name="userType" id="userType" class="form-control-sm">
                    <option value="ALL">All Users</option>
                    <option value="N">Nurse</option>
                    <option value="O">Office Manager</option>
                    <option value="P">Patient</option>
                </select>
                <button type="submit" class="btn btn-success small-btn">Filter</button>
            </div>
        </form>
    </div>
    <table class="table table-striped table-sm small-text" id="userTable">
        <thead class="thead-dark mt-3">
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    E-Mail
                </th>
                <th class="no-sort">
                    Cell Number
                </th>
                <th class="no-sort">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                         @item.ContractDate
                    </td>
                    <td>
                        @item.WoundDescription
                    </td>
                    <td>
                        @item.StartDate?
                    </td>
                    <td class="">
                        
                    </td>
                    <td>
                        <a class="btn btn-warning rounded-3 small-btn" asp-controller="Admin" asp-action="EditUser" asp-route-Id="@item.ContractID">
                            <i class="bi bi-pen"></i>
                        </a>
                        <a class="btn btn-danger rounded-3 small-btn delete-btn" data-bs-toggle="modal" data-bs-target="#DeleteModal" data-item-id="@item.ContractID">
                            <i class="bi bi-trash3"></i>

                        </a>
                        <a class="btn btn-secondary rounded-3 small-btn" asp-controller="Admin" asp-action="UpdateUserPassword" asp-route-Id="@item.ContractID">
                            <i class="bi bi-key-fill"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

