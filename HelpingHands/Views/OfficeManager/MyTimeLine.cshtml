@model HelpingHands.Models.ViewModels.TimeLineViewModel
@{
    ViewData["Title"] = "My TimeLine";
}

<div class="invisible-scrollbar position-relative wh-main">
    <div class="d-flex">
        <h4>My Timeline</h4>

        <div class="ms-auto">
            <a asp-action="CreateTimelinePost" asp-controller="Shared" class="btn btn-success"> <i class="bi bi-chat"></i> Post</a>
        </div>
    </div>
    <div class="row mt-3">
        @if (Model.Posts.Count > 0 && Model.Posts != null)
        {
            @foreach (var post in Model.Posts)
            {
                <div class="col-12 mb-4">
                    <div class="w-100 h-100 border-1 rounded d-flex p-3">

                        <div class="d-flex align-items-start rounded flex-column w-100 p-3 shadow-nyana ">
                            <div class="mb-auto w-100">
                                <div>
                                    <h2 class="mb-2 fs-1 lh-tight">
                                        @post.PostTitle
                                    </h2>
                                    <p>@post.PostContent</p>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <div class="d-flex align-items-center">
                                        <p class="mr-3">
                                            <svg class="gi gi-message-square-2-outline fs-3" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                                <path d="M19 2.435a3 3 0 0 1 3 3v10a3 3 0 0 1-3 3H8.303a1 1 0 0 0-.555.168L3.555 21.4A1 1 0 0 1 2 20.566V5.435a3 3 0 0 1 3-3h14zm0 2H5a1 1 0 0 0-.993.883L4 5.435v13.262l2.64-1.758a3 3 0 0 1 1.443-.496l.22-.008H19a1 1 0 0 0 .993-.883l.007-.117v-10a1 1 0 0 0-.883-.993L19 4.435zm-11 7a1 1 0 1 0 0-2 1 1 0 1 0 0 2zm4 0a1 1 0 1 0 0-2 1 1 0 1 0 0 2zm4 0a1 1 0 1 0 0-2 1 1 0 1 0 0 2z" />
                                            </svg>
                                            @post.Comments.Count
                                        </p>
                                    </div>
                                    <a asp-controller="OfficeManager" asp-action="Post" asp-route-id="@post.Id" class="btn btn-primary btn-sm">Comment</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <p>Nothing happening yet...</p>
                </div>
            </div>
        }
    </div>
</div>
           

