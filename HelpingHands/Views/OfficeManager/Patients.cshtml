@model IEnumerable<HelpingHands.Models.Users.UserModel>
@{
    ViewData["Title"] = "Patients";
}


<div class="d-flex mb-3 mx-3">

    <h5 class="fw-bold">Nurses</h5>

    <div class="ms-auto">

        <a asp-action="NurseUser" asp-controller="OfficeManager" class="btn btn-success">New Nurse</a>
    </div>

</div>

<div class="p-3 mx-3"> 
    <table class="table table-striped small-text" id="userTable">
        <thead class="thead-dark mt-3">
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    E-Mail
                </th>
                <th class="no-sort">
                    Cell Number
                </th>
                <th class="no-sort">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="">
                        @item.CellNo
                    </td>
                    <td>
                        <a class="btn btn-warning rounded-3 small-btn" asp-controller="Admin" asp-action="EditUser" asp-route-Id="@item.UserID">
                            <i class="bi bi-pen"></i>
                        </a>
                        <a class="btn btn-danger rounded-3 small-btn delete-btn" data-bs-toggle="modal" data-bs-target="#DeleteModal" data-item-id="@item.UserID">
                            <i class="bi bi-trash3"></i>

                        </a>
                        <a class="btn btn-secondary rounded-3 small-btn" asp-controller="Admin" asp-action="UpdateUserPassword" asp-route-Id="@item.UserID">
                            <i class="bi bi-key-fill"></i>
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<!-- Modal -->
<div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <div class="fs-1 text-danger">
                    <i class="bi bi-trash3-fill"></i>
                </div>
                <p>Are You Sure My Delete This User???</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="deleteBtn">Delete </button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>

    $(document).ready(function () {
        $("#userTable").DataTable({
            "scrollY": "430px",
            "scrollCollapse": true,
            "columnDefs": [
                { "orderable": false, "targets": 'no-sort' }
            ],
            "rowReorder": true,
            "max-width": "100%"
        });

        $('#userTable tbody').on('click', '.delete-btn', function () {
            var itemId = $(this).data('item-id');
            console.log(itemId);
            $('#deleteBtn').data('item-id', itemId);
        });
        $("#deleteBtn").click(function () {
            var userId = $(this).data('item-id'); // Retrieve the user ID correctly

            console.log(userId);

            $.ajax({
                url: "/Admin/DeleteUser/" + userId,
                type: 'POST',
                contentType: 'application/json',
                dataType: 'json',
                //data: JSON.stringify({userId: userId}),
                success: function () {
                    window.location.href = "/Admin/Users";
                },
                error: function () {
                    alert("Error while deleting user");
                    console.log(userId);
                }
            });
        });



    });
</script>