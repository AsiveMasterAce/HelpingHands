@model IList<CareVisit>

@{
    ViewData["Title"] = "Patient Visits";
}


<h2>My History Visits</h2>

@if (Model.Count() != 0)
{
    

<table class="table table-striped mt-4 small-text">
    <thead>
        <tr>
            <th>Visit Date</th>
            <th style="width:10%;">Arrive Time</th>
            <th style="width:10%;">Depart Time</th>
            <th>Wound Condition</th>
            <th>Notes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visit in Model)
        {
            <tr>
                <td>@visit.VisitDate.Value.ToString("dd/MM/yyyy") </td>
                <td>@visit.VisitArriveTime?.ToString("hh\\:mm")</td>
                <td>@visit.VisitDepartTime?.ToString("hh\\:mm")</td>
                <td>@visit.WoundCondition</td>
                <td>@visit.Notes</td>
            </tr>
        }
    </tbody>
    </table>

}
else
{
    <div class="alert alert-info text-center">
        <p>You have no visits yet!</p>
        <img src="~/img/Calendar-bro.png" class="w-25">
    </div>
}
