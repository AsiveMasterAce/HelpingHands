@*code for the pop modal to pass the action to the controller using Ajax Request

link used for help
https://www.phind.com/search?cache=t9cmyhwr3d4lkppqfcy94tv2
*@
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

    $(document).ready(function() {
    $("#logOut").click(function(e) {
        e.preventDefault();
        
        $.ajax({
            url: '/Auth/LogOut',
            type: 'POST',
            success: function() {
               
                    window.location.href = "/Home/Index";
            },
            error: function() {

                console.log('An error occurred.');
            }
        });
    });
});
</script>
