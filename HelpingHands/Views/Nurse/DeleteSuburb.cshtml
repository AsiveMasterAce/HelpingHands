@model HelpingHands.Models.PreferredSuburb
@{
    ViewData["Title"] = "Delete Suburb";
}


<div class="card">

    <div class="card-header d-flex">
        <p class="text-uppercase pt-1">Delete Suburb</p>

        <div class="ms-auto">

            <a class="btn btn-danger" asp-action="" asp-controller="">Back</a>

        </div>

    </div>

    <div class="card-body text-center">

        <p>Are You Sure You want to remove this suburb???</p>
        <p class="fw-bold" style="font-size:28px;">@Model.Suburb.Name</p>
        <form asp-action="DeletePrefSuburb" asp-controller="Nurse">

            <input asp-for="NurseID" hidden/>
            <input asp-for="SuburbID" hidden/>
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>




