@model HelpingHands.Models.ViewModels.UpdateUserPasswordViewModel;
@{
    ViewData["Title"] = "Update Password";
}

<div class="card">
    <div class="card-header d-flex">

        <p class="text-uppercase pt-1">Update User Password</p>

        <div class="ms-auto">

            <a class="btn btn-danger" asp-action="Users" asp-controller="Admin">Back</a>

        </div>
    </div>

    <div class="col-12 card-body">
        <form asp-action="SubmitPassword" asp-controller="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
                <input asp-for="@Model.UserID" hidden />
                <input asp-for="@Model.UserType" hidden />
                <input asp-for="@Model.FirstName" hidden />
                <input asp-for="@Model.LastName" hidden />
                <input asp-for="@Model.CellNo" hidden />
                <input asp-for="@Model.Email" hidden />
                <div class="form-group col-6">
                    <label asp-for="FirstName" class="control-label required"></label>
                    <input asp-for="FirstName" class="form-control" disabled value="@Model.FirstName" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="LastName" class="control-label required"></label>
                    <input asp-for="LastName" class="form-control" disabled value="@Model.LastName" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group ">
                <label asp-for="Email" class="control-label required"></label>
                <input asp-for="Email" class="form-control" disabled  value="@Model.Email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="CellNo" class="control-label required"></label>
                    <input asp-for="CellNo" class="form-control" disabled value="@Model.CellNo" />
                    <span asp-validation-for="CellNo" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="UserType" class="control-label required"></label>
                    <input value="@ViewBag.RoleName" class="form-control" disabled />

                </div>
            </div>
            <div class="form-group">
                <label class="control-label required">New Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label required">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="d-flex">
                <div class="form-group mt-3 ms-auto">
                    <input type="submit" value="Update User" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>


