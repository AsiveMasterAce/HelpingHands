@{
    ViewData["Title"] = "Home Page";

}


 <div class="bg-greyish p-4 rounded-2">

  <div class="row">

   <div class="col-6 mt-5">
       <h1 style="font-size:54px; font-weight:600;">Helping Hands</h1>
       <p class="mt-3">At Helping Hands, we firmly believe that every individual
           deserves support and care during their most vulnerable moments.
           Our dedicated team of medical professionals
            and volunteers work tirelessly to provide a safe and nurturing environment for those in need.</p>
        <a class="btn bg-black text-white rounded-1 px-2  btn-lg w-50 mt-3">Join Us</a>
   </div>
   <div class="col-6">
       <img src="~/img/injury-cuate.png" class="w-75">
   </div>
    </div>

 </div>

 @if (ViewBag.FAQ != null)
{
 <div class="mt-5 px-2">
     
     <h4 class="text-center fw-bold mb-5">Frequanty asked questions about us</h4>

    @foreach (var faq in ViewBag.FAQ)
        {

             <div class="row">

            <div class="col-5">
                
                <h5 class="fw-bold">@faq.Question</h5>
              
            </div>
            <div class="col-6">

                <p>@faq.Answer</p>
            </div>
            </div>
        }
    </div>
}
else
{
    
}
